<Window x:Class="ChartExWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChartExWpf"
        mc:Ignorable="d"
        Title="ChartEx - Common Charts Model spike (WPF)" Height="590" Width="980" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition MaxHeight="46" MinHeight="46"/>
        </Grid.RowDefinitions>
        <ContentPresenter x:Name="viewPanel" Margin="10,10,10,10" SizeChanged="viewPanel_SizeChanged"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <StackPanel.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
            </StackPanel.Background>
            <Button x:Name="butWaterfall" Content="Waterfall" HorizontalAlignment="Left" Margin="10,10,0,10" Width="75" Click="butWaterfall_Click"/>
            <Button x:Name="butBoxWhisker" Content="Box and Whisker" HorizontalAlignment="Left" Margin="10,10,0,10" Width="110" Click="butBoxWhisker_Click"/>
            <Button x:Name="butFunnel" Content="Funnel" HorizontalAlignment="Left" Margin="10,10,0,10" Width="75" Click="butFunnel_Click"/>
            <Button x:Name="butHistogram" Content="Histogram" HorizontalAlignment="Left" Margin="10,10,0,10" Width="75" Click="butHistogram_Click"/>
            <Button x:Name="butPareto" Content="Pareto" HorizontalAlignment="Left" Margin="10,10,0,10" Width="75" Click="butPareto_Click"/>
            <Button x:Name="butTreemap" Content="Treemap" HorizontalAlignment="Left" Margin="10,10,0,10" Width="75" Click="butTreemap_Click"/>
            <Button x:Name="butSunburst" Content="Sunburst" HorizontalAlignment="Left" Margin="10,10,0,10" Width="75" Click="butSunburst_Click"/>
            <Button x:Name="butColoredLine" Content="ColoredLine" HorizontalAlignment="Left" Margin="10,10,0,10" Width="75" Click="butColoredLine_Click"/>
        </StackPanel>
    </Grid>
</Window>
